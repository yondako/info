---
import { z } from "astro:content";
import { docsSchema } from "@/content.config";
import CommonLayout from "./CommonLayout.astro";
import Title from "@/components/Title.astro";

type Props = z.infer<typeof docsSchema>;

const { title, updatedAt } = Astro.props;
---

<CommonLayout
  title={title}
  description="読書記録サービス「yondako」に関するドキュメントページです"
  ogImage="/og.png"
>
  <Title emoji="📚" tags={["ドキュメント"]} publishedAt={updatedAt} title={title} />
  <article class="article mt-20 max-w-none">
    <slot />
  </article>
</CommonLayout>
