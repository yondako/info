---
import { z } from "astro:content";
import { newsSchema } from "@/content.config";
import CommonLayout from "./CommonLayout.astro";
import Title from "@/components/Title.astro";

type Props = {
  slug: string;
} & z.infer<typeof newsSchema>;

const { slug, ...props } = Astro.props;
---

<CommonLayout
  title={props.title}
  description="読書記録サービス「yondako」に関するお知らせページです"
  ogImage={`/api/og/${slug}.png`}
>
  <Title {...props} />
  <article class="article mt-20 max-w-none">
    <slot />
  </article>
</CommonLayout>
